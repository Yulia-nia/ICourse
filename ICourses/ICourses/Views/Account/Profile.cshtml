@model ICourses.Entities.User
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{ ViewData["Title"] = "Profile"; }

<h3 class="text-center">@localizer["Profile"]</h3>


<div class="container">
    <div class="row">
        <div class="col-md-6 img">
        </div>
        <div class="col-md-6 details">
            <blockquote>



                <small><cite title="Source Title">@Model.Email <i class="icon-map-marker"></i></cite></small>
            </blockquote>
            <table>
                <tr>


                    <td>@Model.Year</td>
                </tr>

                <tr>
                </tr>
                <tr>
                    <td>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                            <div class="works-buttons filter-buttons button-group filters-button-group">
                                <a class="button active" asp-controller="Users" asp-action="Edit" asp-route-id="@Model.Id">@localizer["UserEdit"]</a>
                                <a class="button" asp-controller="Users" asp-action="ChangePassword" asp-route-id="@Model.Id">@localizer["UserChange"]</a>
                            </div>
                        </form>
                    </td>
                </tr>
            </table>


            <div>
                <a class="button-active revealator-slideup revealator-delay3 nav" asp-controller="Courses" asp-action="UserCourses" asp-route-id="@Model.Id">
                    Просмотр ваших курсов
                </a>
            </div>
        </div>
        <div>
            <a class="button-active revealator-slideup revealator-delay3 nav" asp-controller="Courses" asp-action="GetFavorite" asp-route-id="@Model.Id">
                Просмотр избранного
            </a>
        </div>
    </div>
</div>


