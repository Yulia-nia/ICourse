@using Microsoft.AspNetCore.Identity
@model ICourses.ViewModel.ChangeRoleViewModel

<h2 class="text-white">Изменение ролей для пользователя @Model.UserEmail</h2>

<form asp-action="Edit" method="post">

    <input type="hidden" name="userId" value="@Model.UserId" />

    <div class="form-group text-white">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
            }
    </div>
    <button type="submit" class="btn btn-primary button-active">Сохранить</button>
</form>