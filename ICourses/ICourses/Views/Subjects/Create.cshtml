@model ICourses.Data.Models.Subject

@{
    ViewData["Title"] = "Добавить предмет";
}

<section class="eight">
    <div class="container">
        <div class="contacts">
            <div class="why-text text-white">
                <h3>Добавить ноый предмет</h3>
            </div>
            <hr/>
            <div class="contacts-content">
                

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Name" class="control-label text-white"></label>
                            <input class="form-control input-text" asp-for="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="control-label text-white"></label>
                            <textarea asp-for="Description" class="textarea form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary button submit" />
                        </div>

                    </form>
               
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
